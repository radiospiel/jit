#!/usr/bin/env jit.cc

/* Usage: usleep MICROSECONDS */

#include <stdio.h>
#include <stdlib.h>
#include <unistd.h>

static void usage() {
	fprintf(stderr, "Usage: msleep MILLISECONDS\n");
	exit(2);
}

int main(int argc, char** argv) {
	//
	// parse arguments
	if(argc != 2) usage();

	int timeout = atoi(argv[1]);
	if(timeout <= 0) usage();
	
	//
	// wait for child to terminate for up to timeout seconds. Note: 
	// The return value of select will be 0, if the select timed out, and
	// -1 otherwise (i.e. if the child finished running).
	struct timeval tv;
	tv.tv_sec = timeout / 1000;
	tv.tv_usec = timeout % 1000;
	select(0, NULL, NULL, NULL, &tv);

	return 0;
}
