#!/usr/bin/env roundup
describe "test stmpl tool"

stmpl=./stmpl

it_finds_jit() {
  which jit
}

it_works() {
  [ "$HOME" = $(echo '${{HOME}}' | $stmpl) ]

  # error on unknown environment variable
  ! echo '${{xxx_xxx_kjhs_kjs_kjh}}' | $stmpl

  # env variable embedded 
  [ "xx${HOME}yy" = $(echo 'xx${{HOME}}yy' | $stmpl) ]
}

it_works_with_files() {
  export HERE=here
  export THERE='${there}}'
  $stmpl stmpl.in | diff - stmpl.out
}
